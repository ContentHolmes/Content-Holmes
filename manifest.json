{

    "manifest_version": 2,

    "name": "Content Rectifier 2",
    "description": "",
    "version": "1.0.0",

    "icons": {
        // "48": "images/icon_48.png",
        // "128": "images/icon_128.png"
    },

    "background": {
        "scripts": ["js/jquery-2.1.4.min.js", "js/event.js"],
        "persistent": false
    },

    "browser_action": {
        // "default_icon": "images/icon_19.png",
        "default_title": "Content Rectifier 2"
        // "default_popup": "html/login.html"
    },

    "web_accessible_resources": [
        "html/safetypage.html"
    ],

    "options_page": "html/first.html",
    // "options_ui": {
    //   "page": "html/login.html"
    // },

    "content_scripts": [{
        "all_frames": true,
        "js": ["js/jquery-2.1.4.min.js", "js/URLBlock.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_start"
    }, {
        "all_frames": true,
        "js": ["js/URLInviz.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_end"
    }, {
        "all_frames": true,
        "js": ["js/jquery-2.1.4.min.js", "js/URLBlocker.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_end"
    }, {
        "all_frames": true,
        "js": ["js/jquery-2.1.4.min.js", "js/content_script.js", "js/sentiment/sentiment.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_end"
    }],
    "permissions": [
        "tabs", "storage", "activeTab"
    ]
}
