{

    "manifest_version": 2,

    "name": "Content Holmes",
    "description": "",
    "version": "1.0.2",

    "icons": {
         "48": "logo_48.png",
         "128": "logo_128.png"
    },

    "background": {
        "scripts": ["js/jquery-2.1.4.min.js", "js/socket.io.js", "js/event.js"],
        "persistent": false
    },

    "browser_action": {
         "default_icon": "./logo_xs.png",
        "default_title": "Content Holmes",
        "default_popup": "html/popup.html"
    },

    "web_accessible_resources": [
        "html/safetypage.html"
    ],

    "options_page": "html/first.html",

    "content_scripts": [{
        "all_frames": true,
        "js": ["js/jquery-2.1.4.min.js", "js/URLBlock.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_start"
    }, {
        "all_frames": true,
        "js": ["js/URLInviz.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_end"
    }, {
        "all_frames": true,
        "js": ["js/jquery-2.1.4.min.js", "js/URLBlocker.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_end"
    }, {
        "all_frames": true,
        "js": ["js/jquery-2.1.4.min.js", "js/content_script.js", "js/sentiment.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_end"
    }],
    "permissions": [
        "tabs", "storage", "activeTab","management"
    ]
}
